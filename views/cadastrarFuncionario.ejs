    <div class="container mt-4">
        <h2>Cadastrar Funcionário</h2>
        <form method="POST" action="/cadastrarFuncionario">
            <label for="nome">Nome</label>
            <input type="text" id="nome" name="nome" placeholder="ex.: Christian" class="form-control">
            <label for="sobrenome">Sobrenome</label>
            <input type="text" id="sobrenome" name="sobrenome" placeholder="ex.: Félix" class="form-control">
            <label for="dataNascimento">Data de nascimento</label>
            <input type="date" id="dataNascimento" name="dataNascimento" class="form-control">
            <label for="cargo">Cargo</label>
            <input type="text" id="cargo" name="cargo" placeholder="ex.: Gerente" class="form-control">
            <br />
            <button type="submit" class="btn btn-primary form-control">Cadastrar</button>
        </form>
    </div>
